{
  "manifest_version": 3,
  "name": "Zero-Trust AI Firewall",
  "version": "2.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["blur.css"],
      "js": ["js/storage.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "model.json", 
        "tf.min.js", 
        "sandbox.html",
        "group*",
        "data/category_mapping.json",
        "js/classifier.js",
        "js/storage.js",
        "imagenet_classes.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}